<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <ImageView
		android:layout_width="match_parent"
		android:layout_height="500dp"
		android:id="@+id/img_colis"/>
    <LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="match_parent"
    	android:layout_height="150dp"
    	android:id="@+id/bg_txt"
    	android:orientation="horizontal">
    	<ImageView
			android:id="@+id/img_bulle_1"
			android:layout_width="30dp"
    		android:layout_height="30dp"/>
    	<ImageView
			android:id="@+id/img_layton"
			android:layout_width="70dp"
    		android:layout_height="100dp"/>

    	<TextView
			android:id="@+id/txt_dial"
			android:layout_width="200dp"
			android:layout_height="150dp"/>
		<ImageView
			android:id="@+id/img_bulle_2"
			android:layout_width="30dp"
    		android:layout_height="30dp"/>
		<ImageView
			android:id="@+id/img_luke"
			android:layout_width="70dp"
    		android:layout_height="100dp"/>

    		
    </LinearLayout>
    <LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="match_parent"
    	android:layout_height="150dp"
    	android:id="@+id/btn_l"
    	android:orientation="horizontal">
    	<ImageView
			android:id="@+id/img_btn_arr"
			android:layout_width="100dp"
    		android:layout_height="50dp"/>
    	<Space
			android:layout_width="200dp"
			android:layout_height="150dp"/>
		<ImageView
			android:id="@+id/img_btn_av"
			android:layout_width="100dp"
    		android:layout_height="50dp"/>
    </LinearLayout>
    
    
</LinearLayout>